.DinvioWidgetTypeSelector
    position relative
    margin 12px 16px
    display none

    &--show
        display block

    &-button
        display inline-block
        background #fff
        color #666
        box-shadow 0 0 0 1px #eaeaea
        text-decoration none
        text-align center
        cursor pointer
        padding 0 10px
        font-size 14px
        font-weight 300
        line-height 24px
        transition box-shadow 0.1s ease-in-out, background 0.1s ease-in-out, color 0.1s ease-in-out

        &:hover
            background #f6f6f6

        &--active
            background #1e9fc4!important
            color #fff
            box-shadow 0 0 0 1px #1e9fc4

        &:first-child
            border-radius 3px 0 0 3px
        &:last-child
            border-radius 0 3px 3px 0
        &:first-child:last-child
            border-radius 3px
