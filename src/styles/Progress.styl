
.DinvioWidgetProgress
    position absolute
    left 0
    top 0
    width 100%
    visibility hidden
    opacity 0
    height 3px
    transition visibility 0s linear 0.8s, opacity 0.8s ease-in-out

    &--show
        visibility visible
        opacity 1
        transition-delay 0s

    &-bar
        position absolute
        left 0
        top 0
        height 100%
        width 0
        border-radius 1px
        background #1e9fc4
        box-shadow 0 1px 1px rgba(0,0,0,0.25)
        transition width 0.3s ease-in-out


